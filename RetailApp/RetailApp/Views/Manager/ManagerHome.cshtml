@model IEnumerable<RetailApp.Models.Employee>

@{
    ViewBag.Title = "ManagerHome";
}

<h2>Manager Home</h2>
<div>
    <div>  @Html.ActionLink("Schedules", "AllSchedules")</div>
</div>

@using (Html.BeginForm("EmployeeSales", "Manager"))
{
    <table>
        <tr>
            <td>
                @Html.DropDownListFor(e => e.First().EmployeeId, new SelectList(Model.AsEnumerable(), "EmployeeId", "LastName"), new { @class = "form-control" })
            </td>
        </tr>
       
        <tr>
            <td>
                <input type="submit" value="Filter" />
            </td>
        </tr>
    </table>
}

<script type="text/javascript" src="https://www.google.com/jsapi"></script>
<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        $.ajax({
            type: "POST",
            dataType: "json",
            contentType: "application/json",
            url: '@Url.Action("VisualizeData", "Manager")',
            success: function (result) {
                google.charts.load('current', {
                    'packages': ['corechart']
                });
                google.charts.setOnLoadCallback(function () {
                    drawChart(result);
                });
            }
        });
    });
    function drawChart(result) {
        var data = new google.visualization.DataTable();
        data.addColumn('string', 'Model');
        data.addColumn('number', 'Sold');
        var dataArray = [];
        $.each(result, function (i, obj) {
            dataArray.push([obj.ModelName, obj.Sold]);
        });
        data.addRows(dataArray);

        var columnChartOptions = {
            title: "Overall Sales",
            width: 1200,
            height: 600,
            bar: {groupWidth: "20%"}
        }

        var columnChart = new google.visualization.PieChart(document.getElementById('columnchart_div'));

        columnChart.draw(data, columnChartOptions);
    }
</script>

<body>
    <div align="center" id="columnchart_div"></div>
</body>
